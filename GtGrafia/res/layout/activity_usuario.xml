<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true" 
    android:focusableInTouchMode="true"
    android:background="#B03060"
    tools:context="${relativePackage}.${activityClass}" >

	<TextView
	    android:id="@+id/textIngresoUsuario"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:gravity="center"
	    android:text="@string/text_nombre"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="30sp" />

	<EditText
	    android:id="@+id/editNombreUsuario"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/textIngresoUsuario"
	    android:ems="10"
	    android:inputType="none" />

	<Button
	    android:id="@+id/buttonRegistrarUsuario"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/editNombreUsuario"
	    android:layout_centerHorizontal="true"
	    android:onClick="insertarNombre"
	    android:text="@string/button_registro" />

	<ListView
	    android:id="@+id/listUsuariosUsuario"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/buttonRegistrarUsuario" >

	</ListView>

</RelativeLayout>